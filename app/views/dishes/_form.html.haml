%form
  .row.mb-3
    %label.col-sm-2.col-form-label{:for => "@Name"} Name
    .col-sm-10
      %input#inputEmail3.form-control{:type => "name"}/
  .row.mb-3
    %label.col-sm-2.col-form-label{:for => "Price"} Price
    .col-sm-10
      %input#inputPassword3.form-control{:type => "price"}/
