      .form-check
        %input#gridRadios2.form-check-input{:name => "gridRadios", :type => "radio", :value => "soup"}/
        %label.form-check-label{:for => "gridRadios2"}
          Soup
      .form-check
        %input#gridRadios2.form-check-input{:name => "gridRadios", :type => "radio", :value => "beverage"}/
        %label.form-check-label{:for => "gridRadios2"}
          Beverage
  %button.btn.btn-primary{:type => "submit"} Sign in